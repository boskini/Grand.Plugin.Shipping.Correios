@{
    Layout = "_ConfigurePlugin";
}
@model Grand.Plugin.Shipping.Correios.Models.CorreiosShippingModel

<div style="color:Red;">
    @Html.ValidationSummary(false)
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.Url")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Url)
                        @Html.ValidationMessageFor(model => model.Url)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.CompanyCode")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CompanyCode)
                        @Html.ValidationMessageFor(model => model.CompanyCode)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.Password")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.PostalCodeFrom")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PostalCodeFrom)
                        @Html.ValidationMessageFor(model => model.PostalCodeFrom)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.AddDaysForDelivery")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.AddDaysForDelivery)
                        @Html.ValidationMessageFor(model => model.AddDaysForDelivery)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.AvailableCarrierServices")
                    </div>
                    <div class="col-md-9">
                        <div style="height: 250px; width: 300px; overflow: auto; border: solid 1px #bbb;">
                            @foreach (var csd in Model.AvailableCarrierServices)
                            {
                                <input type="checkbox" name="CheckedCarrierServices" value="@(csd)" checked="@Model.ServicesOffered.Contains(csd)" />
                                    <label>@csd</label>
                                    <br />
                            }
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.ServiceNameDefault")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ServiceNameDefault)
                        @Html.ValidationMessageFor(model => model.ServiceNameDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.ShippingRateDefault")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ShippingRateDefault)
                        @Html.ValidationMessageFor(model => model.ShippingRateDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.QtdDaysForDeliveryDefault")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.QtdDaysForDeliveryDefault)
                        @Html.ValidationMessageFor(model => model.QtdDaysForDeliveryDefault)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @T("Plugins.Shipping.Correios.Fields.PercentageShippingFee")
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PercentageShippingFee)
                        @Html.ValidationMessageFor(model => model.PercentageShippingFee)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}
